void getData(string menuItem, double menuPrice[], int& menuList, ifstream& infile)
{

	infile >> menuItem[menuList] >> menuPrice[menuList];

	while (infile && menuList < NO_OF_ITEMS)
	{
		menuList++;
		infile >> menuItem[menuList] >> menuPrice[menuList];
	}
}


#include <iostream>

using namespace std;

int main() 
{
	cout << "Hayden" << "\t" << "pizzaPriceCalculator.cpp\n";

	//declare variables
	double pRadius = 5;
	double area = 0;
	double price = 12;
	double totalPrice = 0;
	const double PI = 3.1415926;

	//calculate area of pizza
	area = PI * pRadius * pRadius;

	//calculate total price of pizza
	totalPrice = price / area;

	//display output to user
	cout << "The total price is: $" << totalPrice;

	return 0;
}
